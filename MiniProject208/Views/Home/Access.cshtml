@model List<ViewModel.MiniProject208.VMAccess>
@{
    Layout = null;
    Session["name"] = "Imam";

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Xsis 2.0</title>

    <!--BEGIN style-->
    <link href="~/Content/bootstrapV4.3.1.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!--END style-->
    <!--BEGIN script-->
    <script src="~/Scripts/jQuery v3.4.1.js"></script>
    <script src="~/Scripts/popper1.14.7.js"></script>
    <script src="~/Scripts/Bootstrap4.3.1.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--END script-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--BEGIN icon-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <!--END icon-->
    <style>
        #form {
            background-color: white;
        }

        .access {
            border: 2px solid blue;
            margin-left: auto;
            margin-right: auto;
        }

        .access-header {
            background-color: #000066;
            padding: 15px 10px;
            font-size: 12pt;
            color: white;
        }
        .s3{
            margin: 20px auto;
        }
    </style>

</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div class="jumbotron min-vh-100 text-center m-0 d-flex flex-column justify-content-center" id="form">
                    <div class="access col-4">
                        <div class="row access-header d-flex">Hi,@Session["name"]</div>
                        @using (Html.BeginForm("changeAccess", "Home", FormMethod.Post, new { id = "idform" }))
                        {
                            <div class="form-group">
                                <select class="form-control s3" id="role" name="role">
                                    <option value="">Xsis Mitra Utama</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.role_id">@item.name</option>

                                    }

                                </select>

                            </div>
                        }
                        <br />
                        <div class="form-group">
                            <label>Company 2</label>

                        </div>



                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        $("#role").change(function () {
            var x = $("#role").val();
            $("#idform").submit();
            
        });
    });
</script>