@model Model.MiniProject208.x_organisasi
@using (Html.BeginForm("EditPost", "Organisasi", FormMethod.Post))
{
    @Html.HiddenFor(a => a.id)//menyembunyikan id
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="name">Nama *</label>
                                    <input type="text" class="form-control" id="name" name="name" value="@Model.name" required oninvalid="this.setCustomValidity('Nama Organisasi Tidak Boleh Kosong')" oninput="setCustomValidity('')" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="position">Jabatan *</label>
                                    <input type="text" class="form-control" id="position" name="position" value="@Model.position" required oninvalid="this.setCustomValidity('Posisi Tidak Boleh Kosong')" oninput="setCustomValidity('')" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="entryYear">Tahun Masuk *</label>
                                        <select class="form-control col-md-10" id="year" name="entry_year" required oninvalid="this.setCustomValidity('Tahun Masuk Tidak Boleh Kosong')" oninput="setCustomValidity('')">
                                        <option value=''>--Pilih Tahun--</option></select>  
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exitYear">Tahun Keluar *</label>
                                        <select class="form-control col-md-10" id="year1" name="exit_year" required oninvalid="this.setCustomValidity('Tahun Keluar Tidak Boleh Kosong')" oninput="setCustomValidity('')">
                                        <option value=''>--Pilih Tahun--</option></select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="responsibility">Tanggung Jawab</label>
                                <input type="text" class="form-control" id="responsibility" name="responsibility" value="@Model.responsibility" />
                            </div>

                            <div class="form-group">
                                <label for="notes">Catatan</label>
                                <input type="text" class="form-control" id="notes" name="notes" value="@Model.notes" />
                            </div>
                            <div class="btn-group" style="float:right">
                                <button type="button" data-dismiss="modal" style="background-color:#ff6a00;margin-top:-30px;" class="btn btn-warning" font size="2">
                                    <span aria-hidden="true">Batal</span>
                                </button>
                                <input type="submit" class="btn btn-secondary " id="save" font size="2" style="margin-top:-30px;" value="Simpan">
                            </div>

}

