@using (Html.BeginForm("DeletePost", "TimeSheet", FormMethod.Post))
{
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Hapus ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="form-group">
        <input type="hidden" value="@ViewBag.timesheet.timesheet_id"/>
        <label style="color:red">Anda yakin akan menghapus Timesheet tanggal <b>@ViewBag.date?</b>  </label>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-danger" id="BtnCreate" value="Hapus" />
    </div>
}
