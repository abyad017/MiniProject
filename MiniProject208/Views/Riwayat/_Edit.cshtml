@model Model.MiniProject208.x_riwayat_pekerjaan
@using (Html.BeginForm("EditPost", "Riwayat", FormMethod.Post))
{
    @Html.HiddenFor(a => a.id)
    @Html.HiddenFor(a => a.created_by)
    @Html.HiddenFor(a => a.created_on)
    @Html.HiddenFor(a => a.biodata_id)
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="company_name">Nama Perusahaan/Instansi*</label>
            <input type="text" class="form-control" id="companyName" name="company_name" value="@Model.company_name" required oninvalid="this.setCustomValidity('Wajib Diisi')" oninput="setCustomValidity('')" />
        </div>
        <div class="form-group col-md-3">
            <label for="city">Kota</label>
            <input type="text" class="form-control" id="city" name="city" value="@Model.city"/>
        </div>
        <div class="form-group col-md-3">
            <label for="country">Negara</label>
            <input type="text" class="form-control" id="country" name="country" value="@Model.country" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Waktu Masuk*</label>

        </div>
        <div class="form-group col-md-6">
            <label>Waktu Keluar*</label>
        </div>
    </div>
    <div class="form-row">

        <div class="form-group col-md-3">
            <select class="form-control" name="join_month" id="join_month" required oninvalid="this.setCustomValidity('Wajib pilih')" oninput="this.setCustomValidity('')">
                
                @foreach (var joinMonth in ViewBag.join_month)
                {
                    <option value="@joinMonth.idJoin">@joinMonth.join</option>

                }
            </select>
            @*@Html.DropDownList("join_month", new SelectList(ViewBag.ListBulan, "id", "bulan1", "--Pilih Bulan--"), new { htmlAttributes = new { @class = "form-control" } })*@
        </div>
        <div class="form-group col-md-3">
            @*<label> </label>*@
            <select class="form-control" name="join_year" id="join_year" required oninvalid="this.setCustomValidity('Wajib pilih')" oninput="this.setCustomValidity('')">
                
                @foreach (var joinYear in ViewBag.join_year)
                {
                    <option value="@joinYear.join">@joinYear.join</option>

                }
            </select>

        </div>

        <div class="form-group col-md-3">

            <select class="form-control" name="resign_month" id="resign_month" required oninvalid="this.setCustomValidity('Wajib pilih')" oninput="this.setCustomValidity('')">
                
                @foreach (var resignMonth in ViewBag.resign_month)
                {
                    <option value="@resignMonth.idResign">@resignMonth.resign</option>

                }
            </select>

        </div>
        <div class="form-group col-md-3">
            @*<label> </label>*@
            <select class="form-control" name="resign_year" id="resign_year" required oninvalid="this.setCustomValidity('Wajib pilih')" oninput="this.setCustomValidity('')">
                
                @foreach (var resignYear in ViewBag.resign_year)
                {
                    <option value="@resignYear.resign">@resignYear.resign</option>

                }
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="last_position">Posisi Terakhir*</label>
            <input type="text" class="form-control" id="lastPosition" name="last_position" value="@Model.last_position" required oninvalid="this.setCustomValidity('Wajib Diisi')" oninput="setCustomValidity('')" />
        </div>
        <div class="form-group col-md-6">
            <label for="income">Penghasilan Terakhir(IDR)</label>
            <input type="text" class="form-control" id="income" name="income" value="@Model.income"/>
        </div>

    </div>
    <div class="form-check">
        @Html.CheckBox("is_it_related", true)

        <label for="is_it_related">IT Related?</label>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="about_job">Keterangan Singkat Mengenai Pekerjaan</label>
            <input type="text" class="form-control" id="about_job" name="about_job" value="@Model.about_job"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="exit_reason">Alasan Keluar</label>
            <input type="text" class="form-control" id="exit_reason" name="exit_reason" value="@Model.exit_reason"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="notes">Catatan</label>
            <input type="text" class="form-control" id="notes" name="notes" value="@Model.notes"/>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" id="btnEdit" value="Simpan">
    <input type="reset" class="btn btn-secondary" id="btnEdit" value="Close">
   }
    