@model List<ViewModel.MiniProject208.VMDetailRencanaJadwal>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-3" style="float:left; margin:15px 0px 5px 15px;">
            @item.p_schedule_date.Value.ToString("dd MMMM yyyy"), @item.p_time
        </div>
        <div class="col-7" style="float:left; margin:15px 0px;">
            RO : @item.p_ro           <br />
            TRO : @item.p_tro         <br />
            Lokasi : @item.p_location <br />
            Jenis Jadwal : @item.p_schedule_type
        </div>
        <div class="col-1" style="float:left; margin:5px 7px; padding:20px 0px 0px;">
            <button class="btn btn-noline" title="Hapus Jadwal" id="@item.p_id">
                <i class="nav-icon fas fa-trash"></i>
            </button>
        </div>
    </div>
}