
@model Model.MiniProject208.x_riwayat_pendidikan
@using (Html.BeginForm("EditPost", "RiwayatPendidikan", FormMethod.Post))
{

    @Html.HiddenFor(a => a.is_delete)
    @Html.HiddenFor(a => a.id)
    <div class="form-row">
        <div class="form-group col-md-6">

            <label for="Nama_Sekolah"><font size="2px" color="#000066">Nama Sekolah/Instansi*</font></label>
            <input type="text" class="form-control" style="border-color:#000066; margin-bottom:16px;" id="VM_Id_Riwayat_Pendidikan" name="school_name" value="@Model.school_name" required oninvalid="this.setCustomValidity('Nama Sekolah Tidak Boleh Kosong')" oninput="setCustomValidity('')">

            <lable for="skill_name"><font size="2px" color="#000066">Jenjang Pendidikan*</font></lable>
            @Html.DropDownList("education_level_id", new SelectList(ViewBag.lsteducationlevel, "id", "name", ""),
                    new { @class = "form-control", @style = "color:#090944;" })

            <div class="form-group" style="margin-top:19px;">
                <label for="Jurusan"><font size="2px" color="#000066">Jurusan</font></label>
                <input type="text" class="form-control" style="border-color:#000066;" id="VM_Jurusan" name="major"  value="@Model.major">
            </div>

        </div>
        <div class="col">

            <div class="row">
                <div class="col form-group">
                    <label for="Kota"><font size="2px" color="#000066">Kota</font></label>
                    <input type="text" class="form-control" style="border-color:#000066;" id="VM_Kota" name="city" value="@Model.city">
                </div>
                <div class="col form-group" style="margin-left:-15px;">
                    <label for="Negara"><font size="2px" color="#000066">Negara</font></label>
                    <input type="text" class="form-control" style="border-color:#000066;" id="VM_Negara" name="country" value="@Model.country">
                </div>
            </div>

            <div class="row">
                <div class="col form-group">
                    <label for="Tahun_Masuk"><font size="2px" color="#000066">Tahun Masuk</font></label>
                    @Html.DropDownList("entry_year",  new SelectList(ViewBag.ListTahun, "Text", "Text", ""),
                    new { @class = "form-control", @style = "color:#090944;" })

                </div>
                <div class="col form-group" style="margin-left:-15px;">
                    <label for="Tahun_Lulus"><font size="2px" color="#000066">Tahun Lulus</font></label>
                    @Html.DropDownList("gradution_year", new SelectList(ViewBag.ListTahun, "Text", "Text", "--Pilih--"),
                   new { @class = "form-control", @style = " border-color:#000066;", @disable = "true" })

                </div>
            </div>
            <div class="col form-group" style="margin-left:-15px;">
                <label for="IPK"><font size="2px" color="#000066">IPK</font></label>
                <input type="text" class="form-control" id="VM_Ipk" name="gpa" width="100%;" value="@Model.gpa">
            </div>
        </div>
    </div>

    <div class="col form-group" style="margin-top:-17px; margin-left:-10px;">
        <label for="Catatan"><font size="2px" color="#000066">Catatan</font></label>
        <input type="text" class="form-control" id="Catatan" name="notes" value="@Model.notes">
    </div>

        <div class="btn-group" style="padding-left:300px;">
            <button type="button" class="btn btn-warning" data-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-secondary" id="btnCreate">Simpan</button>
        </div>









}
